{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitReturns": false,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "build",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "*.ts",
        "lib/**/*"
    ]
}

